<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import com.example.time.Role?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserRegistrationController">
    <Label text="User Registration" />
    <TextField fx:id="usernameField" promptText="Username" />
    <TextField fx:id="passwordField" promptText="Password" />
    <ChoiceBox fx:id="roleChoiceBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Role fx:constant="EMPLOYEE" />
                <Role fx:constant="MANAGER" />
            </FXCollections>
        </items>
    </ChoiceBox>

    <Button text="Register" onAction="#registerUser" />
    <Button text="Already have an account? Log in" onAction="#switchToLoginScreen" />
</VBox>




