<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TaskTrackingController">
    <Label text="Task Tracking" />
    <TextField fx:id="taskIDField" promptText="Task Id" />

    <TextField fx:id="taskNameField" promptText="Task Name" />
    <TextField fx:id="timeSpentField" promptText="Time Spent (hours)" />
    <Button text="Track Task" onAction="#trackTask" />
</VBox>
